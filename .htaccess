<IfModule mod_headers.c>
    # Override default security headers that might block JotForm
    Header unset Content-Security-Policy
    Header unset X-Frame-Options
    
    # Set a strict, production-ready CSP that matches the HTML meta tag
    Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.tailwindcss.com https://www.googletagmanager.com https://cdn.jotfor.ms https://jotform.com https://*.jotform.com https://js.jotform.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://*.jotform.com; font-src 'self' https://fonts.gstatic.com https://*.jotform.com; img-src 'self' data: https://* https://*.jotfor.ms https://*.jotform.com; frame-src 'self' https://www.youtube.com https://youtube.com https://www.youtube-nocookie.com https://form.jotform.com https://jotform.com https://*.jotform.com https://*.jotfor.ms data: blob:; connect-src 'self' https://*.powerplatform.com https://*.azure.com https://*.jotform.com https://*.jotfor.ms; object-src 'none'; base-uri 'self'; form-action 'self' https://*.jotform.com; upgrade-insecure-requests;"
</IfModule>
